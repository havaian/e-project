FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy app source
COPY . .

# Set ALL build-time environment variables
ARG VITE_APP_TITLE
ARG VITE_PROJECT_NAME
ARG VITE_PROJECT_URL
ARG VITE_COLOR_1
ARG VITE_COLOR_2
ARG VITE_COLOR_3
ARG VITE_COLOR_4
ARG VITE_COLOR_5
ARG VITE_COLOR_SUCCESS
ARG VITE_COLOR_WARNING
ARG VITE_COLOR_ERROR
ARG VITE_APP_TITLE_1
ARG VITE_APP_TITLE_2
ARG VITE_APP_TITLE_3
ARG VITE_APP_PAGE_TITLE
ARG VITE_APP_PAGE_DESC

# Convert to env vars
ENV VITE_APP_TITLE=$VITE_APP_TITLE
ENV VITE_PROJECT_NAME=$VITE_PROJECT_NAME
ENV VITE_PROJECT_URL=$VITE_PROJECT_URL
ENV VITE_COLOR_1=$VITE_COLOR_1
ENV VITE_COLOR_2=$VITE_COLOR_2
ENV VITE_COLOR_3=$VITE_COLOR_3
ENV VITE_COLOR_4=$VITE_COLOR_4
ENV VITE_COLOR_5=$VITE_COLOR_5
ENV VITE_COLOR_SUCCESS=$VITE_COLOR_SUCCESS
ENV VITE_COLOR_WARNING=$VITE_COLOR_WARNING
ENV VITE_COLOR_ERROR=$VITE_COLOR_ERROR
ENV VITE_APP_TITLE_1=$VITE_APP_TITLE_1
ENV VITE_APP_TITLE_2=$VITE_APP_TITLE_2
ENV VITE_APP_TITLE_3=$VITE_APP_TITLE_3
ENV VITE_APP_PAGE_TITLE=$VITE_APP_PAGE_TITLE
ENV VITE_APP_PAGE_DESC=$VITE_APP_PAGE_DESC

# Set environment variables
ENV NODE_ENV=development

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]