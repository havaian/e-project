FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy app source
COPY . .

# Make generate-config.sh executable
RUN chmod +x generate-config.sh

# Set environment variables
ENV NODE_ENV=development

# Expose port
EXPOSE 3000

# Generate config and start dev server
CMD ["sh", "-c", "./generate-config.sh && npm run dev -- --host 0.0.0.0"]