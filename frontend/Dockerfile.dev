FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy app source
COPY . .

# Set build-time environment variables
ARG VITE_APP_PAGE_TITLE
ARG VITE_APP_PAGE_DESC  
ARG VITE_PROJECT_URL

ENV VITE_APP_PAGE_TITLE=$VITE_APP_PAGE_TITLE
ENV VITE_APP_PAGE_DESC=$VITE_APP_PAGE_DESC
ENV VITE_PROJECT_URL=$VITE_PROJECT_URL

# Set environment variables
ENV NODE_ENV=development

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]